#!/bin/sh

df="[%Y-%m-%d %H:%M:%S]"

echo "$(date +"$df") UPDATE HOOK called for ref $3"
echo -e "Verifying upload, using rest service at: ${REST_SERVER}"

upload_verification=$(curl -s -H "Accept: application/json" "${REST_SERVER}/query/commits/rdf_verification/$3")

if [[ "$upload_verification" == *"403 Forbidden"* ]]; then
  echo "Access to REST Server forbidden!"
  exit 1
fi

if [[ "$upload_verification" == *"404 Not Found"* ]]; then
  echo "REST Verification endpoint not found!"
  exit 1
fi

echo "$upload_verification" | jq -r '.rdf_verification_steps_response'

exitcode=$(echo "$upload_verification" | jq -r '.exitcode')
if [ "$exitcode" == "0" ]; then
    echo "$(date +"$df") VERIFICATION SUCCESS"
else
    echo "$(date +"$df") VERIFICATION FAILED"
    exit ${exitcode}
fi
